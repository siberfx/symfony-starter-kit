<?xml version="1.0"?>
<psalm
    errorLevel="1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    cacheDirectory="./var/cache/psalm"
>
    <projectFiles>
        <directory name="src" />
        <directory name="src-dev/Maker" />
        <directory name="src-dev/PHPCsFixer" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
            <file name="src/*/config.php" />
            <file name="src/*/*/config.php" />
            <file name="src/Infrastructure/Kernel.php" />
            <file name="src/Infrastructure/di.php" />
            <file name="src-dev/Maker/Vendor/EntityGenerator.php" />
        </ignoreFiles>
    </projectFiles>

    <forbiddenFunctions>
        <function name="dd"/>
        <function name="dump"/>
        <function name="var_dump"/>
    </forbiddenFunctions>

    <issueHandlers>
        <InternalClass>
            <errorLevel type="suppress">
                <referencedClass name="Symfony\Bundle\MakerBundle\Util\UseStatementGenerator" />
            </errorLevel>
        </InternalClass>

        <InternalMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Symfony\Bundle\MakerBundle\Util\UseStatementGenerator::__construct" /> <!-- not supported for all types of errors -->
            </errorLevel>
        </InternalMethod>
        <PluginIssue name="IssueNameEmittedByPlugin" errorLevel="info" /> <!-- this is a special case to handle issues emitted by plugins -->
    </issueHandlers>
</psalm>
